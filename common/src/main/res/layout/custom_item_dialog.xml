<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:minWidth="270dp"
    android:background="@drawable/shape_white_corner"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center"
        android:text="这是头部"
        android:textColor="#000000"
        android:textSize="17sp"
        android:textStyle="bold"/>

    <View
        android:id="@+id/titleMsgLine"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:background="#f2f2f2"/>

    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="这是小小阿卡山沟里"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:visibility="gone"
        android:textColor="#000000"
        android:textSize="13sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="15dp"
        android:background="@color/color_50000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <Button
            android:id="@+id/dialog_left_buton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@null"
            android:textColor="#0076FF"
            android:text="取消"
            android:textSize="17sp"/>

        <View
            android:id="@+id/button_line"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_50000000"/>

        <Button
            android:id="@+id/dialog_right_buton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@null"
            android:textColor="#0076FF"
            android:text="确定"
            android:textSize="17sp"/>
    </LinearLayout>
</LinearLayout>