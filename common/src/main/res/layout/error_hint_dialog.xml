<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog_base_bg"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:padding="5dp"
        android:layout_marginTop="21dp"
        android:layout_marginRight="13dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/dialog_base_close"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="34dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/icon_base_dialog_hint"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提示"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:textColor="@color/color_383157"
            />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:textColor="#979797"
            android:gravity="center"
            android:layout_height="wrap_content"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="1"
                android:textSize="15sp"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/color_fe2176"
                />
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="1"
                android:textSize="15sp"
                android:visibility="gone"
                android:text="取消"
                android:gravity="center"
                android:textColor="@color/color_fe2176"
                />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>